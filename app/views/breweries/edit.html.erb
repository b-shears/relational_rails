
<h1>Update A Brewery</h1>
<%= form_with url: "/breweries/#{@brewery.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :age %>
  <%= form.text_field :age %>
  <%= form.label :pet_friendly %>
  <%= form.text_field :pet_friendly %>
  <%= form.submit 'Update Brewery' %>
<% end %>
